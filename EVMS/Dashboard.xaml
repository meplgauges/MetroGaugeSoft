<UserControl x:Class="EVMS.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1400"
             Background="#F9FCFF">
    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow" Color="#000000" ShadowDepth="2" Opacity="0.08" BlurRadius="6"/>

        <Style x:Key="InteractiveLinkTextBlock" TargetType="TextBlock">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DashboardCardStyle" TargetType="Button">
            <Setter Property="Height" Value="120"/>
            <Setter Property="Width" Value="310"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12" Effect="{StaticResource CardShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{TemplateBinding Content}"
                                           FontSize="17" 
                                           FontWeight="SemiBold"
                                           Foreground="#1F2937"
                                           VerticalAlignment="Center"
                                           Margin="20,0,10,0"
                                           TextWrapping="Wrap"/>

                                <Image Grid.Column="1"
                                       Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                       Height="70" Width="70" 
                                       VerticalAlignment="Center"
                                       Margin="0,0,20,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.0" ScaleY="1.0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
               Background="{StaticResource PageBackgroundBrush}" 
                Padding="30" Margin="20,20,20,0"
                CornerRadius="18"
                Effect="{StaticResource CardShadow}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/Resource/generated-image.png"
                       Stretch="Uniform"
                       Height="80"
                       Margin="0,0,30,0"
                       VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,30,0">
                    <TextBlock Text="Metrology Equipment Pvt. Ltd."
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#102542"
                               Margin="0,0,0,4"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📍 Corporate Headquarters: "
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"/>
                        <TextBlock Text="# 55/18, Bellahalli Village, Bangalore - 560 064"
                                   Foreground="#6B7280"
                                   FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="✉️ info@meplgauges.com"
                               Style="{StaticResource InteractiveLinkTextBlock}"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="🌐 Meplgauges.com"
                               Style="{StaticResource InteractiveLinkTextBlock}"
                               Margin="0,6,0,0"
                               HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1" Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.RowSpan="2"
               Background="{StaticResource PageBackgroundBrush}" 
                    CornerRadius="12"
                    Effect="{StaticResource CardShadow}"
                    Padding="30">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Dashboard"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#1F2937"
                               HorizontalAlignment="Left"
                               Margin="0,0,0,25"/>

                    <UniformGrid Grid.Row="1" Rows="4" Columns="4" 
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Top" 
                                 Width="1500">

                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/measument.png" Content="Measurement"
                                Click="DashboardCard_Click" Background="#EAF5FF"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/report.png" Content="Report View"
                                Click="DashboardCard_Click" Background="#F0FFEE"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/graph.png" Content="Report Graph"
                                Click="DashboardCard_Click" Background="#FFF0F5"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/Part Manager.png" Content="Part Manager"
                                Click="DashboardCard_Click" Background="#FFFBEA"/>

                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/Part Manager.png" Content="Part Config"
                                Click="DashboardCard_Click" Background="#F7EFFB"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/Part Manager.png" Content="Master Reading"
                                Click="DashboardCard_Click" Background="#F5F5FC"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/re.png" Content="Repeatability"
                                Click="DashboardCard_Click" Background="#FDF4F8"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/cal.png" Content="Calculation"
                                Click="DashboardCard_Click" Background="#EFFBF6"/>

                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/probe set.png" Content="Probe Setup"
                                Click="DashboardCard_Click" Background="#FCFBF2"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/controle.png" Content="IO Control"
                                Click="DashboardCard_Click" Background="#F5F9F6"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/admin.png" Content="Login/Setup"
                                Click="DashboardCard_Click" Background="#FCEFEF"/>
                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/sett.png" Content="Settings"
                                Click="DashboardCard_Click" Background="#E8F4FF"/>

                        <Button Style="{StaticResource DashboardCardStyle}" Tag="pack://application:,,,/icon/inst.png" Content="Probe Install"
                                Click="DashboardCard_Click" Background="#FFFFFF"/>

                    </UniformGrid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>