                <Line X1="700" Y1="234" X2="584" Y2="234" Stroke="#5090F9" StrokeThickness="2"/>

                <TextBlock x:Name="ID_2_Label" Text="ID-2" Style="{StaticResource LabelStyle1}" Canvas.Left="760" Canvas.Top="175"/>
                <TextBlock x:Name="RN_5_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="740" Canvas.Top="200"/>
                <TextBox x:Name="ID_2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="790" Canvas.Top="170"/>
                <TextBox x:Name="RN_5" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="790" Canvas.Top="195"/>

                <Line X1="234" Y1="355" X2="585" Y2="355" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                <Line X1="235" Y1="235" X2="235" Y2="355" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="585" Y1="235" X2="585" Y2="355" Stroke="#5090F9" StrokeThickness="2"/>

                <TextBlock x:Name="OL_Label" Text="TOTAL LENGTH" Style="{StaticResource LabelStyle1}" Canvas.Left="335" Canvas.Top="369"/>
                <TextBox x:Name="OL" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="410" Canvas.Top="365"/>

            </Canvas>
        </Viewbox>






        <!-- Right Panel -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0" >
            <!-- Gauge UniformGrid -->
            <UniformGrid x:Name="ProgressBarContainer"
               Grid.Row="1"
               Columns="9"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Margin="0,0,30,0"
               MinHeight="560"
               MinWidth="200"/>
        </Grid>






        <!-- Row 2: DataGrid spanning both columns -->
        <Border Style="{StaticResource CardBox}"
                Grid.Row="2" Grid.ColumnSpan="4"
                Margin="20,5,20,10" Padding="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">    

            <DataGrid x:Name="ValveReadingsGrid"
                  PreviewKeyDown="ValveReadingsGrid_PreviewKeyDown"
                  AutoGenerateColumns="True"
                  AutoGeneratingColumn="ValveReadingsGrid_AutoGeneratingColumn"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  GridLinesVisibility="None"
                  Background="White"
                  Foreground="Black"
                  BorderBrush="#DDD"
                  RowBackground="White"
                  AlternatingRowBackground="#F2F2F2"
                  HorizontalGridLinesBrush="#E0E0E0"
                  VerticalGridLinesBrush="#E0E0E0"
                  RowHeight="26"
                  ColumnHeaderHeight="40"
                  FontSize="14"
                  FontFamily="Segoe UI"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ColumnWidth="*"
                  MinHeight="100"
                  MinWidth="100">

                <!-- Modern Styles -->
                <DataGrid.Resources>

                    <!-- ✅ Modern Header Style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1F2937"/>
                        <!-- Dark gray-blue -->
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="BorderBrush" Value="#374151"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                    </Style>

                    <!-- ✅ Modern Row Style -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Margin" Value="0,1,0,1"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <!-- light hover -->
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <!-- blue highlight -->
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <!-- ✅ Centered Cell Style -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="4,2"/>
                    </Style>

                </DataGrid.Resources>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>