                <Line X1="120" Y1="170" X2="232" Y2="170" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="120" Y1="235" X2="234" Y2="235" Stroke="#5090F9" StrokeThickness="2"/>

                <TextBlock x:Name="ID1_Label" Text="ID-1" Style="{StaticResource LabelStyle1}" Canvas.Left="9" Canvas.Top="179"/>
                <TextBlock x:Name="RN_4_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="-12" Canvas.Top="204"/>
                <TextBox x:Name="ID_1" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="40" Canvas.Top="175"/>
                <TextBox x:Name="RN_4" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="40" Canvas.Top="200"/>

                <Line X1="245" Y1="115" X2="245" Y2="167" Stroke="#5090F9" StrokeThickness="2"/>
                <TextBlock x:Name="OD_1_Label" Text="SOD-1" Style="{StaticResource LabelStyle1}" Canvas.Left="190" Canvas.Top="64"/>
                <TextBlock x:Name="OD_1_RN_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="180" Canvas.Top="90"/>
                <TextBox x:Name="STEP_OD1" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="230" Canvas.Top="60"/>
                <TextBox x:Name="STEP_RUNOUT_1" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="230" Canvas.Top="85"/>

                <Line X1="300" Y1="237" X2="300" Y2="280" Stroke="#5090F9" StrokeThickness="2"/>
