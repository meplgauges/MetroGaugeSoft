<UserControl x:Class="EVMS.ResultPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:EVMS"
            Background="LightBlue"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardBox" TargetType="Border">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#777" BlurRadius="12" ShadowDepth="1" Opacity="0.10"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="#EDF2F7"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
        </Style>
        <!-- Label style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <!-- Visuals -->
            <Setter Property="Foreground" Value="#283445"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <!-- Responsive behavior -->
            <Setter Property="TextWrapping" Value="Wrap"/>
            <!-- auto-wrap long text -->
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <!-- "..." if no space -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="LabelStyle1" TargetType="TextBlock">
            <!-- Visuals -->
            <Setter Property="Foreground" Value="#283445"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <!-- Responsive behavior -->
            <Setter Property="TextWrapping" Value="Wrap"/>
            <!-- auto-wrap long text -->
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <!-- "..." if no space -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <!-- Heading style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#234E70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <!-- DataGrid for modern look -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F7FAFC"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E2E8F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E2E8F0"/>
        </Style>
        <Style x:Key="ValueBoxStyle" TargetType="TextBox">
            <!-- Layout constraints -->
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="MaxWidth" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <!-- Modern fonts -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <!-- Box visuals -->
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="7,0"/>
            <!-- Center text -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <!-- Subtle shadow -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#D3E2F2" BlurRadius="6" ShadowDepth="1" />
                </Setter.Value>
            </Setter>
            <!-- Focus styling -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  Padding="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="PART_ContentHost" Property="BorderBrush" Value="#3399FF"/>
                                <Setter TargetName="PART_ContentHost" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="ValueBoxStyle1" TargetType="TextBox">
            <!-- Remove fixed Width/Height -->
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="MaxWidth" Value="130"/>
            <!-- prevent too wide on large screen -->
            <!-- Stretch to fill available space -->
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <!-- Visuals -->
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#234E70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
            <!-- reduced a bit to fit smaller screens -->
        </Style>

        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchTrack"
                                Background="#FF0000"
                                CornerRadius="18"
                                Height="33"
                                Width="80"/>

                            <Ellipse x:Name="SwitchThumb"
                                 Width="30"
                                 Height="29"
                                 Fill="#F2F5F6"
                                 Margin="3"
                                 HorizontalAlignment="Left">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <!-- OFF -->
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <DoubleAnimation
                                            Storyboard.TargetName="SwitchThumb"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            To="0" Duration="0:0:0.1"/>
                                            <ColorAnimation
                                            Storyboard.TargetName="SwitchTrack"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FF0000" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>

                                    <!-- ON -->
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation
                                            Storyboard.TargetName="SwitchThumb"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            To="44" Duration="0:0:0.1"/>
                                            <ColorAnimation
                                            Storyboard.TargetName="SwitchTrack"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#4CAF50" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F7FAFC">
        

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="270"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" x:Name="LeftColumn"/>
            <ColumnDefinition Width="2.6*" x:Name="RightColumn"/>
        </Grid.ColumnDefinitions>

        
        <!-- Top Info Panel -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />






            </Grid.ColumnDefinitions>
            
                <!-- Part No -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Part No" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtModel" Style="{StaticResource ValueBoxStyle}" />
            </StackPanel>

            <!-- Lot No -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Lot No" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtLotNo" Style="{StaticResource ValueBoxStyle}" />
            </StackPanel>

            <!-- Operator ID -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Operator ID" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtUserId" Style="{StaticResource ValueBoxStyle}" />
            </StackPanel>

            <!-- Inspection Qty -->
            <!-- Inspection Qty -->
            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Inspection Qty" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtInspectionQty" Style="{StaticResource ValueBoxStyle}" Text="0" IsReadOnly="True"/>
            </StackPanel>

            <!-- OK Count -->
            <StackPanel Grid.Column="4" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="OK Count" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtOkCount" 
                 Style="{StaticResource ValueBoxStyle}" 
                 Background="LimeGreen" 
                 Foreground="White" 
                 FontWeight="Bold"
                 Text="0" 
                 IsReadOnly="True"
                 Padding="4"/>
            </StackPanel>

            <!-- NG Count -->
            <StackPanel Grid.Column="5" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="NG Count" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtNgCount" 
                 Style="{StaticResource ValueBoxStyle}" 
                 Background="IndianRed" 
                 Foreground="White" 
                 FontWeight="Bold"
                 Text="0" 
                 IsReadOnly="True"
                 Padding="4"/>
            </StackPanel>

            <StackPanel Grid.Column="6" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Measurement" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton 
                x:Name="MeasurementToggle"
                Style="{StaticResource SwitchToggleStyle}"
                Checked="MeasurementToggle_Checked"
                Unchecked="ToggleButton_Unchecked"/>
            </StackPanel>

            <StackPanel Grid.Column="7" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Mastering" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton
                x:Name="MasterToggle"
                Style="{StaticResource SwitchToggleStyle}"
                Checked="MasterToggle_Checked"
                Unchecked="ToggleButton_Unchecked"/>
            </StackPanel>

            <StackPanel Grid.Column="8" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Master Inspection" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton 
                x:Name="MasterInspectionToggleButton"
                Style="{StaticResource SwitchToggleStyle}"
                Checked="MasterInspectionToggleButton_Checked"
                Unchecked="ToggleButton_Unchecked"/>    
            </StackPanel>

            <StackPanel Grid.Column="9" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Manual/Auto" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>

                <ToggleButton 
                x:Name="AutoManualToggle"
                Style="{StaticResource SwitchToggleStyle}" 
                Checked="AutoManualToggle_Checked" 
                Unchecked="AutoManualToggle_Unchecked" />

            </StackPanel>



            <StackPanel Grid.Column="10" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Switch Bar" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>

                <ToggleButton x:Name="SwitchProgressBarBtn"
                      Style="{StaticResource SwitchToggleStyle}"
                      Checked="SwitchProgressBar_Click"
                      Unchecked="SwitchProgressBar_Click"/>
            </StackPanel>


            <StackPanel Grid.Column="11" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Switch Part" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton x:Name="ToggleBtn"
                    Style="{StaticResource SwitchToggleStyle}"
                    Click="ToggleBtn_Click"/>
            </StackPanel>

            <StackPanel Grid.Column="12" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Clear Cycle" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton x:Name="ClearBit"
                 Style="{StaticResource SwitchToggleStyle}"
                 Click="ToggleBtn_Click1"/>
            </StackPanel>

        </Grid>
        <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform" MinWidth="400" MinHeight="350">

