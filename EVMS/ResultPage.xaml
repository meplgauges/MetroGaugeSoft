<UserControl x:Class="EVMS.ResultPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:EVMS"
            Background="LightBlue"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>

        <Style x:Key="InfoCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DADADA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="2"
                                  Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== LABEL ===== -->
        <Style x:Key="TopLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- ===== VALUE BOX ===== -->
        <Style x:Key="TopValueBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Modern Card Style -->
        <Style x:Key="CardBox" TargetType="Border">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#777" BlurRadius="12" ShadowDepth="1" Opacity="0.10"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="#EDF2F7"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
        </Style>
        <!-- Label style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <!-- Visuals -->
            <Setter Property="Foreground" Value="#283445"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <!-- Responsive behavior -->
            <Setter Property="TextWrapping" Value="Wrap"/>
            <!-- auto-wrap long text -->
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <!-- "..." if no space -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="LabelStyle1" TargetType="TextBlock">
            <!-- Visuals -->
            <Setter Property="Foreground" Value="#283445"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <!-- Responsive behavior -->
            <Setter Property="TextWrapping" Value="Wrap"/>
            <!-- auto-wrap long text -->
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <!-- "..." if no space -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <!-- Heading style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#234E70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <!-- DataGrid for modern look -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F7FAFC"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E2E8F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E2E8F0"/>
        </Style>
        <Style x:Key="ValueBoxStyle" TargetType="TextBox">
            <!-- Layout constraints -->
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="MaxWidth" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <!-- Modern fonts -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <!-- Box visuals -->
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="7,0"/>
            <!-- Center text -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <!-- Subtle shadow -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#D3E2F2" BlurRadius="6" ShadowDepth="1" />
                </Setter.Value>
            </Setter>
            <!-- Focus styling -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  Padding="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="PART_ContentHost" Property="BorderBrush" Value="#3399FF"/>
                                <Setter TargetName="PART_ContentHost" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="ValueBoxStyle1" TargetType="TextBox">
            <!-- Remove fixed Width/Height -->
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="MaxWidth" Value="130"/>
            <!-- prevent too wide on large screen -->
            <!-- Stretch to fill available space -->
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <!-- Visuals -->
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#234E70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
            <!-- reduced a bit to fit smaller screens -->
        </Style>

        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchTrack"
                                Background="#FF0000"
                                CornerRadius="18"
                                Height="33"
                                Width="80"/>

                            <Ellipse x:Name="SwitchThumb"
                                 Width="30"
                                 Height="29"
                                 Fill="#F2F5F6"
                                 Margin="3"
                                 HorizontalAlignment="Left">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <!-- OFF -->
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <DoubleAnimation
                                            Storyboard.TargetName="SwitchThumb"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            To="0" Duration="0:0:0.1"/>
                                            <ColorAnimation
                                            Storyboard.TargetName="SwitchTrack"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FF0000" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>

                                    <!-- ON -->
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation
                                            Storyboard.TargetName="SwitchThumb"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            To="44" Duration="0:0:0.1"/>
                                            <ColorAnimation
                                            Storyboard.TargetName="SwitchTrack"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#4CAF50" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F7FAFC">


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" x:Name="LeftColumn"/>
            <ColumnDefinition Width="2.6*" x:Name="RightColumn"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ================= GROUP 1 ================= -->
            <Border Grid.Column="0" Grid.ColumnSpan="3" Margin="4" Background="#F7ECD0"

            Style="{StaticResource InfoCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="6">
                        <TextBlock Text="Part No" Style="{StaticResource LabelStyle}" Margin="2"/>
                        <TextBox x:Name="txtModel" Style="{StaticResource ValueBoxStyle}" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="6">
                        <TextBlock Text="Lot No" Style="{StaticResource LabelStyle}" Margin="2"/>
                        <TextBox x:Name="txtLotNo" Style="{StaticResource ValueBoxStyle}" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="6">
                        <TextBlock Text="Operator ID" Style="{StaticResource LabelStyle}" Margin="2"/>
                        <TextBox x:Name="txtUserId" Style="{StaticResource ValueBoxStyle}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ================= GROUP 2 ================= -->
            <Border Grid.Column="3" Grid.ColumnSpan="3" Margin="4" Background="#F7ECD0"

            Style="{StaticResource InfoCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="6">
                        <TextBlock Text="Inspection Qty" Style="{StaticResource LabelStyle}" Margin="2"/>
                        <TextBox x:Name="txtInspectionQty" Style="{StaticResource ValueBoxStyle}" Text="0" IsReadOnly="True"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="6">
                        <TextBlock Text="OK Count" Style="{StaticResource LabelStyle}" Margin="2"/>
                        <TextBox x:Name="txtOkCount" 
                             Style="{StaticResource ValueBoxStyle}" 
                             Background="LimeGreen" 
                             Foreground="White" 
                             FontWeight="Bold"
                             Text="0" 
                             IsReadOnly="True"
                             Padding="4"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="6">
                        <TextBlock Text="NG Count" Style="{StaticResource LabelStyle}" Margin="2"/>
                        <TextBox x:Name="txtNgCount" 
                             Style="{StaticResource ValueBoxStyle}" 
                             Background="IndianRed" 
                             Foreground="White" 
                             FontWeight="Bold"
                             Text="0" 
                             IsReadOnly="True"
                             Padding="4"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ================= GROUP 3 ================= -->
            <Border Grid.Column="6" Grid.ColumnSpan="3" Margin="4"   Background="#F7ECD0"

            Style="{StaticResource InfoCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="6">
                        <TextBlock Text="MASTERING" Style="{StaticResource TopLabelStyle}"/>
                        <ToggleButton
                            x:Name="MasterToggle"
                            Style="{StaticResource SwitchToggleStyle}"
                            Checked="MasterToggle_Checked"
                            Unchecked="ToggleButton_Unchecked"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="6">
                        <TextBlock Text="MASTER INSPECTION" Style="{StaticResource TopLabelStyle}"/>
                        <ToggleButton 
                            x:Name="MasterInspectionToggleButton"
                            Style="{StaticResource SwitchToggleStyle}"
                            Checked="MasterInspectionToggleButton_Checked"
                            Unchecked="ToggleButton_Unchecked"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="6">
                        <TextBlock Text="MEASURMENT" Style="{StaticResource TopLabelStyle}"/>
                        <ToggleButton 
                                x:Name="MeasurementToggle"
                                Style="{StaticResource SwitchToggleStyle}"
                                Checked="MeasurementToggle_Checked"
                                Unchecked="ToggleButton_Unchecked"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ================= GROUP 4 ================= -->
            <Border Grid.Column="9" Grid.ColumnSpan="3" Margin="4"   Background="#F7ECD0"

            Style="{StaticResource InfoCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="6">
                        <TextBlock Text="MANUAL / AUTO" Style="{StaticResource TopLabelStyle}"/>
                        <ToggleButton 
                            x:Name="AutoManualToggle"
                            Style="{StaticResource SwitchToggleStyle}" 
                            Checked="AutoManualToggle_Checked" 
                            Unchecked="AutoManualToggle_Unchecked" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="6">
                        <TextBlock Text="SWITCH BAR" Style="{StaticResource TopLabelStyle}"/>
                        <ToggleButton x:Name="SwitchProgressBarBtn"
                          Style="{StaticResource SwitchToggleStyle}"
                          Checked="SwitchProgressBar_Click"
                          Unchecked="SwitchProgressBar_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="6"                        
   >
                        <TextBlock Text="SWITCH PART" Style="{StaticResource TopLabelStyle}"/>
                        <ToggleButton x:Name="ToggleBtn"
                    Style="{StaticResource SwitchToggleStyle}" 
                    Click="ToggleBtn_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ================= GROUP 5 ================= -->
            <Border Grid.Column="12" Margin="6"
            Background="#F7ECD0"
            BorderBrush="#FF9800"
            BorderThickness="1"
            CornerRadius="10">
                <StackPanel HorizontalAlignment="Center" Margin="8">
                    <TextBlock Text="CLEAR CYCLE"
                       Foreground="#E65100"
                       FontWeight="Bold"
                       FontSize="12"/>
                    <ToggleButton x:Name="ClearBit"
                 Style="{StaticResource SwitchToggleStyle}"
                 Click="ToggleBtn_Click1"/>
                </StackPanel>
            </Border>

        </Grid>
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="#E3F9FA"
                Margin="10"
                Padding="8"
                Style="{StaticResource InfoCardStyle}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ===== TITLE ===== -->
                <TextBlock Grid.Row="0"
                   Text="VALVE GUIDE MEASUREMENT VIEW"
                   FontSize="15"
                   FontWeight="Bold"
                   Foreground="#1F2937"
                   Margin="6,4,6,8"/>

                <!-- ===== VIEWBOX + CANVAS ===== -->

                <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform" MinWidth="400" MinHeight="350">

                    <Canvas Width="820" Height="400" Background="#E3F9FA">

                        <Image Source="/Resource/valve_g.png" Width="700" Height="400" Canvas.Left="60" Canvas.Top="10"/>

                        <Line X1="120" Y1="170" X2="120" Y2="235" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                        <Line X1="120" Y1="170" X2="232" Y2="170" Stroke="#5090F9" StrokeThickness="2"/>
                        <Line X1="120" Y1="235" X2="234" Y2="235" Stroke="#5090F9" StrokeThickness="2"/>

                        <TextBlock x:Name="ID1_Label" Text="ID-1" Style="{StaticResource LabelStyle1}" Canvas.Left="9" Canvas.Top="179"/>
                        <TextBlock x:Name="RN_4_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="-12" Canvas.Top="204"/>
                        <TextBox x:Name="ID_1" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="40" Canvas.Top="175"/>
                        <TextBox x:Name="RN_4" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="40" Canvas.Top="200"/>

                        <Line X1="245" Y1="115" X2="245" Y2="167" Stroke="#5090F9" StrokeThickness="2"/>
                        <TextBlock x:Name="OD_1_Label" Text="SOD-1" Style="{StaticResource LabelStyle1}" Canvas.Left="190" Canvas.Top="64"/>
                        <TextBlock x:Name="OD_1_RN_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="180" Canvas.Top="90"/>
                        <TextBox x:Name="STEP_OD1" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="230" Canvas.Top="60"/>
                        <TextBox x:Name="STEP_RUNOUT_1" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="230" Canvas.Top="85"/>

                        <Line X1="300" Y1="237" X2="300" Y2="280" Stroke="#5090F9" StrokeThickness="2"/>
                        <TextBlock x:Name="OD_2_Label" Text="OD-2" Style="{StaticResource LabelStyle1}" Canvas.Left="260" Canvas.Top="285"/>
                        <TextBlock x:Name="OD_2_RN_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="245" Canvas.Top="305"/>
                        <TextBox x:Name="OD_2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="290" Canvas.Top="282"/>
                        <TextBox x:Name="RN_2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="290" Canvas.Top="305"/>

                        <Line X1="380" Y1="115" X2="380" Y2="166" Stroke="#5090F9" StrokeThickness="2"/>
                        <TextBlock x:Name="OD_3_Label" Text="OD-3" Style="{StaticResource LabelStyle1}" Canvas.Left="335" Canvas.Top="64"/>
                        <TextBlock x:Name="OD_3_RN_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="320" Canvas.Top="90"/>
                        <TextBox x:Name="OD_3" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="370" Canvas.Top="60"/>
                        <TextBox x:Name="RN_3" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="370" Canvas.Top="85"/>

                        <Line X1="450" Y1="237" X2="450" Y2="280" Stroke="#5090F9" StrokeThickness="2"/>
                        <TextBlock x:Name="OD_4_Label" Text="OD-4" Style="{StaticResource LabelStyle1}" Canvas.Left="415" Canvas.Top="285"/>
                        <TextBlock x:Name="OD_4_RN_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="400" Canvas.Top="305"/>
                        <TextBox x:Name="OD_4" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="445" Canvas.Top="282"/>
                        <TextBox x:Name="RN_4B" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="445" Canvas.Top="305"/>

                        <Line X1="560" Y1="115" X2="560" Y2="167" Stroke="#5090F9" StrokeThickness="2"/>
                        <TextBlock x:Name="OD_5_Label" Text="SOD-2" Style="{StaticResource LabelStyle1}" Canvas.Left="510" Canvas.Top="64"/>
                        <TextBlock x:Name="STEP_RUNOUT_2_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="505" Canvas.Top="90"/>
                        <TextBox x:Name="STEP_OD2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="550" Canvas.Top="60"/>
                        <TextBox x:Name="STEP_RUNOUT_2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="550" Canvas.Top="85"/>

                        <Line X1="700" Y1="168" X2="700" Y2="234" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                        <Line X1="700" Y1="169" X2="584" Y2="169" Stroke="#5090F9" StrokeThickness="2"/>
                        <Line X1="700" Y1="234" X2="584" Y2="234" Stroke="#5090F9" StrokeThickness="2"/>

                        <TextBlock x:Name="ID_2_Label" Text="ID-2" Style="{StaticResource LabelStyle1}" Canvas.Left="760" Canvas.Top="175"/>
                        <TextBlock x:Name="RN_5_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="740" Canvas.Top="200"/>
                        <TextBox x:Name="ID_2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="790" Canvas.Top="170"/>
                        <TextBox x:Name="RN_5" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="790" Canvas.Top="195"/>

                        <Line X1="234" Y1="355" X2="585" Y2="355" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                        <Line X1="235" Y1="235" X2="235" Y2="355" Stroke="#5090F9" StrokeThickness="2"/>
                        <Line X1="585" Y1="235" X2="585" Y2="355" Stroke="#5090F9" StrokeThickness="2"/>

                        <TextBlock x:Name="OL_Label" Text="TOTAL LENGTH" Style="{StaticResource LabelStyle1}" Canvas.Left="335" Canvas.Top="369"/>
                        <TextBox x:Name="OL" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="410" Canvas.Top="365"/>

                    </Canvas>
                </Viewbox>


            </Grid>
        </Border>



        <!-- ================= RIGHT PANEL : CARD STYLE ================= -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="6">

            <Border Style="{StaticResource InfoCardStyle}" 
            Padding="0" Background="#E3F9FA">

                <Grid>

                    <!-- Gauge UniformGrid -->
                    <UniformGrid x:Name="ProgressBarContainer"
                         Columns="9"
                         Margin="0,2,2,0"
                         MinHeight="560"
                         MinWidth="200"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"/>
                </Grid>

            </Border>

        </Grid>






        <!-- ================= ROW 2 : DATAGRID CARD ================= -->
        <Border Grid.Row="2"
                Grid.ColumnSpan="4"
                Margin="9,5,9,5"
                Padding="8"
                Style="{StaticResource InfoCardStyle}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>



                <!-- ===== DATAGRID ===== -->
                <DataGrid Grid.Row="1"
                          x:Name="ValveReadingsGrid"
                          PreviewKeyDown="ValveReadingsGrid_PreviewKeyDown"
                          AutoGenerateColumns="True"
                          AutoGeneratingColumn="ValveReadingsGrid_AutoGeneratingColumn"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          Background="White"
                          Foreground="#111827"
                          BorderThickness="0"
                          RowBackground="White"
                          AlternatingRowBackground="#F3F4F6"
                          HorizontalGridLinesBrush="#E5E7EB"
                          VerticalGridLinesBrush="#E5E7EB"
                          RowHeight="28"
                          ColumnHeaderHeight="25"
                          FontSize="15"
                          FontWeight="Bold"
                          FontFamily="Segoe UI"
                          ColumnWidth="*"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          MinHeight="100"
                          MinWidth="100">

                    <!-- ================= MODERN STYLES ================= -->
                    <DataGrid.Resources>

                        <!-- COLUMN HEADER -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#1F2937"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="BorderBrush" Value="#374151"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>

                        <!-- DATA ROW -->
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#111827"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E5E7EB"/>
                                </Trigger>

                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>

                        <!-- CELL -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="6,2"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>

                    </DataGrid.Resources>

                </DataGrid>
            </Grid>
        </Border>


    </Grid>
</UserControl>