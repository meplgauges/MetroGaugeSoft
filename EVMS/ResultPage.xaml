<UserControl x:Class="EVMS.ResultPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:EVMS"
            Background="LightBlue"
             d:DesignHeight="700" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardBox" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#777" BlurRadius="12" ShadowDepth="1" Opacity="0.10"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Background" Value="#EDF2F7"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
        </Style>
        <!-- Label style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <!-- Visuals -->
            <Setter Property="Foreground" Value="#283445"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <!-- Responsive behavior -->
            <Setter Property="TextWrapping" Value="Wrap"/>
            <!-- auto-wrap long text -->
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <!-- "..." if no space -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>

        <Style x:Key="LabelStyle1" TargetType="TextBlock">
            <!-- Visuals -->
            <Setter Property="Foreground" Value="#283445"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="10"/>
            <!-- Responsive behavior -->
            <Setter Property="TextWrapping" Value="Wrap"/>
            <!-- auto-wrap long text -->
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
            <!-- "..." if no space -->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
        <!-- Heading style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#234E70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <!-- DataGrid for modern look -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#F7FAFC"/>
            <Setter Property="Foreground" Value="#1A202C"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F1F5F9"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI, Arial"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E2E8F0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E2E8F0"/>
        </Style>
        <Style x:Key="ValueBoxStyle" TargetType="TextBox">
            <!-- Layout constraints -->
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="MaxWidth" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <!-- Modern fonts -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <!-- Box visuals -->
            <Setter Property="Background" Value="Black"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="7,0"/>
            <!-- Center text -->
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <!-- Subtle shadow -->
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#D3E2F2" BlurRadius="6" ShadowDepth="1" />
                </Setter.Value>
            </Setter>
            <!-- Focus styling -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  Padding="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="PART_ContentHost" Property="BorderBrush" Value="#3399FF"/>
                                <Setter TargetName="PART_ContentHost" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="ValueBoxStyle1" TargetType="TextBox">
            <!-- Remove fixed Width/Height -->
            <Setter Property="MinWidth" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="MaxWidth" Value="130"/>
            <!-- prevent too wide on large screen -->
            <!-- Stretch to fill available space -->
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <!-- Visuals -->
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#234E70"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="6,0"/>
            <!-- reduced a bit to fit smaller screens -->
        </Style>

        <Style x:Key="SwitchToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="SwitchTrack"
                                Background="#FF0000"
                                CornerRadius="18"
                                Height="33"
                                Width="80"/>

                            <Ellipse x:Name="SwitchThumb"
                                 Width="30"
                                 Height="29"
                                 Fill="#F2F5F6"
                                 Margin="3"
                                 HorizontalAlignment="Left">
                                <Ellipse.RenderTransform>
                                    <TranslateTransform/>
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <!-- OFF -->
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <DoubleAnimation
                                            Storyboard.TargetName="SwitchThumb"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            To="0" Duration="0:0:0.1"/>
                                            <ColorAnimation
                                            Storyboard.TargetName="SwitchTrack"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#FF0000" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>

                                    <!-- ON -->
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <DoubleAnimation
                                            Storyboard.TargetName="SwitchThumb"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            To="44" Duration="0:0:0.1"/>
                                            <ColorAnimation
                                            Storyboard.TargetName="SwitchTrack"
                                            Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                            To="#4CAF50" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F7FAFC">
        

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="270"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" x:Name="LeftColumn"/>
            <ColumnDefinition Width="2.6*" x:Name="RightColumn"/>
        </Grid.ColumnDefinitions>

        
        <!-- Top Info Panel -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />




            </Grid.ColumnDefinitions>
            
                <!-- Part No -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Part No" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtModel" Style="{StaticResource ValueBoxStyle}" />
            </StackPanel>

            <!-- Lot No -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Lot No" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtLotNo" Style="{StaticResource ValueBoxStyle}" />
            </StackPanel>

            <!-- Operator ID -->
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Operator ID" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtUserId" Style="{StaticResource ValueBoxStyle}" />
            </StackPanel>

            <!-- Inspection Qty -->
            <!-- Inspection Qty -->
            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Inspection Qty" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtInspectionQty" Style="{StaticResource ValueBoxStyle}" Text="0" IsReadOnly="True"/>
            </StackPanel>

            <!-- OK Count -->
            <StackPanel Grid.Column="4" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="OK Count" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtOkCount" 
             Style="{StaticResource ValueBoxStyle}" 
             Background="LimeGreen" 
             Foreground="White" 
             FontWeight="Bold"
             Text="0" 
             IsReadOnly="True"
             Padding="4"/>
            </StackPanel>

            <!-- NG Count -->
            <StackPanel Grid.Column="5" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="NG Count" Style="{StaticResource LabelStyle}" Margin="2"/>
                <TextBox x:Name="txtNgCount" 
             Style="{StaticResource ValueBoxStyle}" 
             Background="IndianRed" 
             Foreground="White" 
             FontWeight="Bold"
             Text="0" 
             IsReadOnly="True"
             Padding="4"/>
            </StackPanel>

            <StackPanel Grid.Column="6" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Measurement" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton 
        x:Name="MeasurementToggle"
        Style="{StaticResource SwitchToggleStyle}"
        Checked="MeasurementToggle_Checked"
        Unchecked="ToggleButton_Unchecked"/>
            </StackPanel>

            <StackPanel Grid.Column="7" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Mastering" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton
        x:Name="MasterToggle"
        Style="{StaticResource SwitchToggleStyle}"
        Checked="MasterToggle_Checked"
        Unchecked="ToggleButton_Unchecked"/>
            </StackPanel>

            <StackPanel Grid.Column="8" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Master Inspection" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton 
        x:Name="MasterInspectionToggleButton"
        Style="{StaticResource SwitchToggleStyle}"
        Checked="MasterInspectionToggleButton_Checked"
        Unchecked="ToggleButton_Unchecked"/>
            </StackPanel>

            <StackPanel Grid.Column="9" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="Manual/Auto" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>

                <ToggleButton 
        x:Name="AutoManualToggle"
        Style="{StaticResource SwitchToggleStyle}" 
        Checked="AutoManualToggle_Checked" 
        Unchecked="AutoManualToggle_Unchecked" />

            </StackPanel>



            <StackPanel Grid.Column="10" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="SwitchBar" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>

                <ToggleButton x:Name="SwitchProgressBarBtn"
                      Style="{StaticResource SwitchToggleStyle}"
                      Checked="SwitchProgressBar_Click"
                      Unchecked="SwitchProgressBar_Click"/>
            </StackPanel>


            <StackPanel Grid.Column="11" Orientation="Vertical" Margin="8,0">
                <TextBlock Text="SwitchValve" HorizontalAlignment="Center" Style="{StaticResource LabelStyle}" Margin="2"/>
                <ToggleButton x:Name="ToggleBtn"
                    Style="{StaticResource SwitchToggleStyle}"
                    Click="ToggleBtn_Click"/>
            </StackPanel>
            
        </Grid>

        <Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform" MinWidth="400" MinHeight="350">
            <Canvas Width="820" Height="400" Background="#F7FAFC">

                <!-- Valve Image -->
                <Image Source="/Resource/valve.png" Width="700" Height="400" Canvas.Left="43" Canvas.Top="-22"/>

                <!-- Groove Dia -->
                <Line X1="90" Y1="162" X2="90" Y2="198" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                <Line X1="89" Y1="162" X2="110" Y2="162" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="89" Y1="196" X2="110" Y2="196" Stroke="#5090F9" StrokeThickness="2"/>
                <TextBlock x:Name="GrooveDiaLabel" Text="GROOVE DIA" Style="{StaticResource LabelStyle1}" Canvas.Right="810" Canvas.Top="170"/>
                <TextBox x:Name="GrooveDiaBox" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Right="750" Canvas.Top="170"/>

                <TextBlock x:Name="GroovePoLabel" Text="GROOVE POSITION" Style="{StaticResource LabelStyle1}" Canvas.Right="760" Canvas.Top="260"/>
                <TextBox x:Name="GroovePo" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Right="750" Canvas.Top="280"/>

                <!-- Stem Dia -->
                <Line X1="180" Y1="130" X2="180" Y2="165" Stroke="#5090F9" StrokeThickness="2"/>
                <TextBlock x:Name="STDGLabel" Text="STDG" Style="{StaticResource LabelStyle1}" Canvas.Left="270" Canvas.Top="135"/>
                <TextBox x:Name="STDG" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="190" Canvas.Top="131"/>

                <Line X1="530" Y1="130" X2="530" Y2="165" Stroke="#5090F9" StrokeThickness="2"/>
                <TextBlock x:Name="StemDiaLabel" Text="STEM DIA" Style="{StaticResource LabelStyle1}" Canvas.Left="430" Canvas.Top="135"/>
                <TextBox x:Name="StemDiaBox" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="480" Canvas.Top="131"/>

                <!-- Head Dia -->
                <Line X1="665" Y1="250" X2="820" Y2="250" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="820" Y1="100" X2="820" Y2="250" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                <TextBlock x:Name="HeadDiaLabel" Text="HEAD DIA" Style="{StaticResource LabelStyle1}" Canvas.Left="700" Canvas.Top="120"/>
                <TextBox x:Name="HeadDiaBox" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="720" Canvas.Top="140"/>

                <TextBlock x:Name="FaceRunoutLabel" Text="FACE RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="700" Canvas.Top="190"/>
                <TextBox x:Name="FaceRunout" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="720" Canvas.Top="210"/>

                <!-- Seat Height -->
                <Line X1="700" Y1="70" X2="665" Y2="70" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                <Line X1="663" Y1="98" X2="663" Y2="70" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="665" Y1="100" X2="820" Y2="100" Stroke="#5090F9" StrokeThickness="2"/>
                <TextBlock x:Name="SeatHeightLabel" Text="SEAT HEIGHT" Style="{StaticResource LabelStyle1}" Canvas.Left="670" Canvas.Top="40"/>
                <TextBox x:Name="SeatHeightBox" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="735" Canvas.Top="35"/>
                <TextBlock x:Name="SeatRunoutLabel" Text="SEAT RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="730" Canvas.Top="70"/>
                <TextBox x:Name="SeatRunout" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="799" Canvas.Top="65"/>

                <!-- Datum to End -->
                <Line X1="648" Y1="300" X2="648" Y2="240" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="645" Y1="120" X2="645" Y2="50" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="110" Y1="50" X2="110" Y2="161" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="110" Y1="50" X2="645" Y2="50" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                <TextBlock x:Name="DatumToEndLabel" Text="DATUM TO END" Style="{StaticResource LabelStyle1}" Canvas.Left="350" Canvas.Top="30"/>
                <TextBox x:Name="DatumToEndBox" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="430" Canvas.Top="20"/>

                <!-- Datum to Groove -->
                <Line X1="665" Y1="340" X2="665" Y2="250" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="140" Y1="300" X2="140" Y2="195" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="140" Y1="300" X2="650" Y2="300" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                <TextBlock x:Name="DatumToGrooveLabel" Text="DATUM TO GROOVE" Style="{StaticResource LabelStyle1}" Canvas.Left="300" Canvas.Top="310"/>
                <TextBox x:Name="DatumToGrooveBox" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="430" Canvas.Top="300"/>

                <!-- Stem Taper -->
                <TextBlock x:Name="StemTaperLabel" Text="STEM TAPER" Style="{StaticResource LabelStyle1}" Canvas.Left="310" Canvas.Top="70"/>
                <TextBox x:Name="StemTaper" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="400" Canvas.Top="205"/>

                <!-- Straightness -->
                <TextBlock x:Name="StraightnessLabel" Text="STRAIGHTNESS" Style="{StaticResource LabelStyle1}" Canvas.Left="320" Canvas.Top="210"/>
                <TextBox x:Name="Straightness" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="370" Canvas.Top="70"/>

                <!-- Overall Length -->
                <Line X1="110" Y1="340" X2="110" Y2="195" Stroke="#5090F9" StrokeThickness="2"/>
                <Line X1="110" Y1="340" X2="665" Y2="340" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
                <TextBlock x:Name="OverallLengthLabel" Text="OVERALL LENGTH" Style="{StaticResource LabelStyle1}" Canvas.Left="310" Canvas.Top="360"/>
                <TextBox x:Name="OverallLengthBox" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="400" Canvas.Top="350"/>

                <!-- Head Runout -->
                <TextBlock x:Name="HeadRunoutLabel" Text="HEAD RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="700" Canvas.Top="310"/>
                <TextBox x:Name="HeadRunout" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="780" Canvas.Top="305"/>

                <!-- Head Over -->
                <TextBlock x:Name="HeadOverLabel" Text="HEAD OVER" Style="{StaticResource LabelStyle1}" Canvas.Left="710" Canvas.Top="280"/>
                <TextBox x:Name="HeadOver" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="780" Canvas.Top="275"/>

            </Canvas>
        </Viewbox>



        <!-- Right Panel -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0" >
            <!-- Gauge UniformGrid -->
            <UniformGrid x:Name="ProgressBarContainer"
           Grid.Row="1"
           Columns="9"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"
           Margin="0,0,30,0"
           MinHeight="560"
           MinWidth="200"/>
        </Grid>






        <!-- Row 2: DataGrid spanning both columns -->
        <Border Style="{StaticResource CardBox}"
        Grid.Row="2" Grid.ColumnSpan="4"
        Margin="20,5,20,10" Padding="3"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

            <DataGrid x:Name="ValveReadingsGrid"
            PreviewKeyDown="ValveReadingsGrid_PreviewKeyDown"

              AutoGenerateColumns="True"
              AutoGeneratingColumn="ValveReadingsGrid_AutoGeneratingColumn"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              IsReadOnly="True"
              GridLinesVisibility="None"
              Background="White"
              Foreground="Black"
              BorderBrush="#DDD"
              RowBackground="White"
              AlternatingRowBackground="#F2F2F2"
              HorizontalGridLinesBrush="#E0E0E0"
              VerticalGridLinesBrush="#E0E0E0"
              RowHeight="26"
              ColumnHeaderHeight="40"
              FontSize="14"
              FontFamily="Segoe UI"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              ColumnWidth="*"
              MinHeight="100"
              MinWidth="100">

                <!-- Modern Styles -->
                <DataGrid.Resources>

                    <!-- ✅ Modern Header Style -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1F2937"/>
                        <!-- Dark gray-blue -->
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="BorderBrush" Value="#374151"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                    </Style>

                    <!-- ✅ Modern Row Style -->
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="Margin" Value="0,1,0,1"/>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5E7EB"/>
                                <!-- light hover -->
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3B82F6"/>
                                <!-- blue highlight -->
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <!-- ✅ Centered Cell Style -->
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="4,2"/>
                    </Style>

                </DataGrid.Resources>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>