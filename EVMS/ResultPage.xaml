                <TextBlock x:Name="STEP_RUNOUT_2_Label" Text="RUNOUT" Style="{StaticResource LabelStyle1}" Canvas.Left="505" Canvas.Top="90"/>
                <TextBox x:Name="STEP_OD2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="550" Canvas.Top="60"/>
                <TextBox x:Name="STEP_RUNOUT_2" Text="--" Style="{StaticResource ValueBoxStyle1}" Canvas.Left="550" Canvas.Top="85"/>

                <Line X1="700" Y1="168" X2="700" Y2="234" Stroke="#5090F9" StrokeDashArray="4 2" StrokeThickness="2"/>
