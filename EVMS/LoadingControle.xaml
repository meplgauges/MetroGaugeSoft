<UserControl x:Class="EVMS.LoadingControle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EVMS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#AA000000" Visibility="Collapsed">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Background="White"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Spinner -->
            <Ellipse Width="50" Height="50" Stroke="Blue" StrokeThickness="4" Opacity="0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="SpinnerRotate" Angle="0" CenterX="25" CenterY="25"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <!-- Indeterminate ProgressBar -->
            <ProgressBar Width="150" Height="20" IsIndeterminate="True" Margin="0,15,0,0" />

            <!-- Loading Text -->
            <TextBlock Text="Loading, please wait..." FontSize="14" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
