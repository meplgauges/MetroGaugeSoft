<Window x:Class="EVMS.SplashScreenPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MetroMic Soft"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="700" Height="400"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid>
        <!-- Frosted Glass Blur Background with Modern Gradient -->
        <Border
            CornerRadius="26"
            Margin="12"
            Background="{DynamicResource ModernGlassGradient}">
            <Border.Effect>
                <BlurEffect Radius="16"/>
            </Border.Effect>
        </Border>

        <!-- Main content with colorful accent and shadow -->
        <Border
            Background="#B3FFFFFF" CornerRadius="26"
Margin="12">
            <!-- More opaque for modern shine -->

            <Border.Effect>
                <DropShadowEffect BlurRadius="32" ShadowDepth="0" Opacity="0.16" Color="#282D4F"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!-- Logo and Brand -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <Border Width="160" Height="160" CornerRadius="60"  >
                        <Image Source="pack://application:,,,/Resource/logo.png" Stretch="Uniform" Margin="-22,-24,-22,-24"/>

                    </Border>
                    <TextBlock Text="MetroGaugeSoft"
                               FontSize="24"
                               FontWeight="Bold"
                                >
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#1A52FE" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#264D99" BlurRadius="4" Direction="320" ShadowDepth="2" Opacity="0.6"/>
                        </TextBlock.Effect>
                        <TextBlock.Margin>0,12,0,0</TextBlock.Margin>
                        <TextBlock.HorizontalAlignment>Center</TextBlock.HorizontalAlignment>
                    </TextBlock>

                </StackPanel>
                <!-- Main Content -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="38,0,34,0" >
                    <TextBlock Text="Valve Guide Measurement System"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#282D4F"
                               FontFamily="Segoe UI"
                               Margin="0,0,0,5" Width="414"/>

                    <TextBlock Text="A precise and efficient system for measuring multiple parameters of valves Guide using Analog probes and automated control."
                               FontSize="15"
                               Foreground="#39355B"
                               Margin="0,0,0,2"
                               TextWrapping="Wrap"/>

                    <!-- Modern ProgressBar with accent gradient -->
                    <ProgressBar x:Name="ProgressBar"
                                 Height="13"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="1"
                                 BorderThickness="0"
                                 Margin="0,0,0,14"
                                 Background="#EEF1F7" >
                        <ProgressBar.Resources>
                            <!-- Gradient and rounded caps for progress -->
                            <LinearGradientBrush x:Key="ProgressBarForeground" StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#6196FF" Offset="0"/>
                                <GradientStop Color="#AA7CF2" Offset="1"/>
                            </LinearGradientBrush>
                            <Style TargetType="Rectangle">
                                <Setter Property="RadiusX" Value="7"/>
                                <Setter Property="RadiusY" Value="7"/>
                            </Style>
                        </ProgressBar.Resources>
                        <ProgressBar.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#5F9EFF" Offset="0.1"/>
                                <GradientStop Color="#8B76F9" Offset="1"/>
                            </LinearGradientBrush>
                        </ProgressBar.Foreground>
                    </ProgressBar>
                    <TextBlock x:Name="LoadingText"
                               Text="Loading..."
                               FontSize="13"
                               Foreground="#7477A9"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <!-- ResourceDictionary for glass-like gradient -->
    <Window.Resources>
        <LinearGradientBrush x:Key="ModernGlassGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#DCF7FE" Offset="0.02"/>
            <GradientStop Color="#EEF1F7" Offset="0.3"/>
            <GradientStop Color="#E1CCF9" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
</Window>
