<UserControl x:Class="EVMS.ResultProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="250" MinHeight="160"
             Background="Transparent">

    <Viewbox Stretch="Uniform">
        <!-- Canvas logical size; Viewbox will scale it -->
        <Canvas x:Name="GaugeCanvas" Width="470" Height="320" Margin="0,0,0,0">

            <!-- Backing layers (drawn in code) -->
            <Canvas x:Name="ArcsLayer" IsHitTestVisible="False"/>
            <Canvas x:Name="TicksLayer" IsHitTestVisible="False"/>

            <!-- Needle (will be positioned in code) -->
            <Line x:Name="Needle"
                  Stroke="Red"
                  StrokeThickness="5"
                  StrokeEndLineCap="Round"
                  StrokeStartLineCap="Round"
                  IsHitTestVisible="False">
                <Line.RenderTransform>
                    <RotateTransform x:Name="NeedleRotate" Angle="0"/>
                </Line.RenderTransform>
            </Line>

            <!-- Hub container (circle + value inside) -->
            <Grid x:Name="HubContainer"
                  Width="60" Height="30"
                  IsHitTestVisible="False"
                  RenderTransformOrigin="0.5,0.5">
                <Rectangle x:Name="StatusRectangle" Fill="Black" RadiusX="9" RadiusY="9" Stroke="Black" StrokeThickness="5"/>
                <TextBlock x:Name="CenterValueText"
               Text="0.000"
               FontSize="29"
               Foreground="White"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
            </Grid>


            <TextBlock x:Name="LabelID"
                       Text="{Binding ParameterName, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="15"
                       FontWeight="Bold"
                       IsHitTestVisible="False"/>


        </Canvas>
    </Viewbox>
</UserControl>
