<UserControl x:Class="EVMS.MasterReadingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EVMS"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- LEFT PANEL: Row 0 -->
        <Border Grid.Column="0" Grid.Row="0" Margin="18,18,8,10"
        BorderBrush="#D9D9D9"
        BorderThickness="1"
        CornerRadius="14" Background="{StaticResource PageBackgroundBrush}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="BurlyWood" BorderThickness="1" Background="Black" CornerRadius="10" Padding="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,10">
                    <TextBlock Text="⚙ MASTER SETUP"
                       FontSize="14" FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                </Border>
                <StackPanel Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <TextBlock Text="Select Part No:" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox  x:Name="cmbPartNo"
                       Style="{StaticResource ModernComboBoxStyle}"
                       HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
                    <TextBlock Text="Select Parameter:" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox x:Name="cmbParameter"
                      Style="{StaticResource ModernComboBoxStyle}"
                      HorizontalAlignment="Stretch" Margin="0,0,0,10"/>
                    <TextBlock Text="Nominal:" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtNominal" Style="{StaticResource ModernFilledTextBox}" MinWidth="200" Margin="0,0,0,10"/>
                    <TextBlock Text="R_Tol(+):" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtRTolPlus" Style="{StaticResource ModernFilledTextBox}" MinWidth="200" Margin="0,0,0,10"/>
                    <TextBlock Text="R_Tol(-):" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtRTolMinus" Style="{StaticResource ModernFilledTextBox}" MinWidth="200" Margin="0,0,0,10"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                    <Button x:Name="btnAdd" Content="Add" Width="90" Height="36" Background="#2ECC71" Foreground="White" FontWeight="SemiBold" Margin="0,0,12,0" Style="{StaticResource ModernButtonStyle}"/>
                    <Button x:Name="btnUpdate" Content="Update" Width="90" Height="36" Background="#F39C12" Foreground="White" FontWeight="SemiBold" Margin="0,0,12,0" Style="{StaticResource ModernButtonStyle}"/>
                    <Button x:Name="btnDelete" Content="Delete" Width="90" Height="36" Background="#E74C3C" Foreground="White" FontWeight="SemiBold" Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>


        <Border Grid.Column="0" Grid.Row="1" Margin="18,3,8,10"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="16"
                SnapsToDevicePixels="True"
                Effect="{DynamicResource ShadowEffect}"
                Background="{StaticResource PageBackgroundBrush}">
            <Grid Margin="10">  
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <Border BorderBrush="BurlyWood" BorderThickness="1" Background="Black" CornerRadius="10" Padding="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,15,0,10">
                    <TextBlock Text="⚙ MASTER EXPIRATION"
                       FontSize="13" FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                </Border>

                <!-- Radio Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,10">
                    <RadioButton x:Name="rbCount" Content="By Count" IsChecked="True" GroupName="ExpirationType"
                         FontSize="16" FontWeight="Bold" Foreground="Black"
                         Checked="RadioButton_Checked"
                         Margin="10,0"/>
                    <RadioButton x:Name="rbTime" Content="By Time (Hours)"  GroupName="ExpirationType"
                         FontSize="16" FontWeight="Bold" Foreground="Black"
                         Checked="RadioButton_Checked"
                         Margin="20,0"/>
                </StackPanel>

                <!-- Shared Input -->
                <StackPanel Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="0,15,0,15" Width="300">
                    <TextBlock x:Name="lblInput" 
                               Text="Set Count (1 - 9999)"
                               HorizontalAlignment="Left"
                               Margin="5,0,0,5"
                               FontSize="14" FontWeight="Bold"
                               Foreground="Black"/>
                    <TextBox x:Name="txtInput" Height="42"
                             Style="{StaticResource ModernFilledText}"
                             FontSize="16"
                             Padding="10"
                             BorderThickness="1"
                             BorderBrush="#BDC3C7"
                             Background="White"
                             Foreground="Black"
                             PreviewTextInput="NumberValidationTextBox"
                             MaxLength="4"/>
                </StackPanel>

                <!-- Button -->
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnSet" Content="SET" Width="120" Height="42"
                            Background="#2ECC71" Foreground="White" FontSize="16"
                            FontWeight="Bold" Cursor="Hand"
                            BorderThickness="0"
                            Style="{StaticResource ModernButtonStyle1}"
                            Click="btnSet_Click"/>
                </StackPanel>
            </Grid>
        </Border>


        <!-- RIGHT PANEL spanning both rows -->
        <Border Grid.Column="1" Grid.RowSpan="2" Margin="12,20,20,10"
                BorderBrush="#D9D9D9"
                BorderThickness="0.90"
                CornerRadius="14"
                Background="{StaticResource PageBackgroundBrush}">
           
            <DataGrid x:Name="dataGrid"
                      SelectionChanged="dataGrid_SelectionChanged"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="10"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      AlternatingRowBackground="#F4F6F8"
                      GridLinesVisibility="None"
                      RowHeaderWidth="0"
                      FontSize="14"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Padding="4"
                      RowHeight="38"
                      EnableRowVirtualization="True"
                      ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeaderStyle}"
                      RowStyle="{StaticResource CustomDataGridRowStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sr No" Binding="{Binding RowNo}" IsReadOnly="True" Width="60"
                                        ElementStyle="{StaticResource CenterCellStyle}"
                                        EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="Parameter" Binding="{Binding Parameter}" Width="2*"
                                        ElementStyle="{StaticResource CenterCellStyle}"
                                        EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="Nominal" Binding="{Binding Nominal}" Width="*"
                                        ElementStyle="{StaticResource CenterCellStyle}"
                                        EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="R_Tol(+)" Binding="{Binding RTolPlus}" Width="*"
                                        ElementStyle="{StaticResource CenterCellStyle}"
                                        EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="R_Tol(-)" Binding="{Binding RTolMinus}" Width="*"
                                        ElementStyle="{StaticResource CenterCellStyle}"
                                        EditingElementStyle="{StaticResource CenterCellStyle}" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
