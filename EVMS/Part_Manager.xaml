<UserControl x:Class="EVMS.Part_Manager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="950">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
        
    </UserControl.Resources>

    <Grid Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- TITLE BAR -->
      
        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Row="1" Background="{StaticResource PageBackgroundBrush}">
            
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <!-- INPUT PANEL -->
                <Border Padding="20"
                        CornerRadius="16"
                        Width="1200"
                        Height="150"
                        Background="#AAFFFFFF"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="12"
                                          ShadowDepth="2"
                                          Opacity="0.25"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                        <!-- Part Number -->
                        <StackPanel Width="300" Margin="1,0">
                            <TextBlock Text="Part Number" FontWeight="SemiBold" Margin="20,0,0,0" FontSize="15"/>
                            <TextBox x:Name="txtPartNumber"
                                     Height="38"
                                     Padding="8"
                                     BorderThickness="1"
                                     BorderBrush="#CCCCCC"
                                     Background="#F9F9F9"
                                     Style="{StaticResource ModernFilledTextBox1}"/>
                        </StackPanel>
                        <!-- Part Name -->
                        <StackPanel Width="300" Margin="1,0">
                            <TextBlock Text="Part Name" FontWeight="SemiBold" Margin="20,0,0,0" FontSize="15"/>
                            <TextBox x:Name="txtPartName"
                                     Height="38"
                                    
                                     Padding="8"
                                     BorderThickness="1"
                                     BorderBrush="#CCCCCC"
                                     Background="#F9F9F9"
                                     Style="{StaticResource ModernFilledTextBox1}"/>
                        </StackPanel>
                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10,0">
                            <CheckBox x:Name="chkActivePart" Content="Active Part" Style="{StaticResource PillCheckBox}"/>

                            <Button Content="Add" x:Name="btnAdd" Style="{StaticResource AddButtonStyle}" Click="BtnAdd_Click"/>
                            <Button Content="Update" x:Name="btnUpdate" Style="{StaticResource UpdateButtonStyle}"/>
                            <Button Content="Delete" x:Name="btnDelete" Style="{StaticResource DeleteButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Spacer for Gap -->
                <Border Height="24" Background="Transparent"/>

                <!-- DATA GRID PANEL -->
                <Border Padding="15"
                        CornerRadius="16"
                        Width="1200"
                        Height="220"
                        Background="#CCFFFFFF"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="Black"
                                          BlurRadius="10"
                                          ShadowDepth="2"
                                          Opacity="0.25"/>
                    </Border.Effect>
                    <DataGrid x:Name="dataGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False" 
                          SelectionChanged="dataGrid_SelectionChanged"
                          IsReadOnly="False" 
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F5F5F5"
                          RowBackground="White"
                          GridLinesVisibility="None"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          BorderThickness="0"
                          FontSize="20"
                          Margin="0">   

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Resources>
                            <!-- Style for centered TextBlock in read-only display -->
                            <Style x:Key="CenterTextBlockStyle" TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                            <!-- Style for centered TextBox in editing mode -->
                            <Style x:Key="CenterTextBoxStyle" TargetType="TextBox">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                            <!-- Style for centered CheckBox -->
                            <Style x:Key="CenterCheckBoxStyle" TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="Auto" IsReadOnly="True"
        ElementStyle="{StaticResource CenterTextBlockStyle}"
        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>
                            <DataGridTextColumn Header="Part Number" Binding="{Binding Para_No}" Width="*"
        ElementStyle="{StaticResource CenterTextBlockStyle}"
        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>
                            <DataGridTextColumn Header="Part Name" Binding="{Binding Para_Name}" Width="*"
        ElementStyle="{StaticResource CenterTextBlockStyle}"
        EditingElementStyle="{StaticResource CenterTextBoxStyle}"/>
                            <!-- Status Indicator Column -->
                            <DataGridTemplateColumn Header="Status" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Ellipse Width="18" Height="18" Stroke="Black">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="Red"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ActivePart}" Value="True">
                                                            <Setter Property="Fill" Value="Green"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>



                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
