<UserControl x:Class="EVMS.Part_Manager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="1200">

    <!-- ================= RESOURCES ================= -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/PartManagerDesign.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- ================= ROOT ================= -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= INPUT PANEL ================= -->
        <Border Grid.Row="0"
                Margin="20,15"
                Padding="20"
                CornerRadius="16"
                Background="{StaticResource PageBackgroundBrush}" 
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="12"
                                  ShadowDepth="2"
                                  Opacity="0.25"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Part Number -->
                <StackPanel Grid.Column="0" Margin="8">
                    <TextBlock Text="Part Number" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPartNumber"
                             Style="{StaticResource ModernFilledTextBox1}"/>
                </StackPanel>

                <!-- Part Name -->
                <StackPanel Grid.Column="1" Margin="8">
                    <TextBlock Text="Part Name" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPartName"
                             Style="{StaticResource ModernFilledTextBox1}"/>
                </StackPanel>

                <!-- ComboBox 1 -->
                <StackPanel Grid.Column="2" Margin="1">
                    <TextBlock Text="Select ID" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbCategory"
                              Style="{StaticResource ModernComboBoxStyle}"/>
                </StackPanel>

                <!-- ComboBox 2 -->
                <StackPanel Grid.Column="3" Margin="1">
                    <TextBlock Text="BOT" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbVendor"
                              Style="{StaticResource ModernComboBoxStyle}"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Column="4"
                            Orientation="Horizontal"
                            VerticalAlignment="Bottom"
                            Margin="10,0">

                    <CheckBox x:Name="chkActivePart"
                              Content="Active"
                              Style="{StaticResource PillCheckBox}"
                              Margin="0,0,12,0"/>

                    <Button Content="Add"
                            x:Name="btnAdd"
                            Style="{StaticResource AddButtonStyle}"
                            Click="BtnAdd_Click"/>

                    <Button Content="Update"
                            x:Name="btnUpdate"
                            Style="{StaticResource UpdateButtonStyle}"
                            Click="BtnUpdate_Click"/>

                    <Button Content="Delete"
                            x:Name="btnDelete"
                            Style="{StaticResource DeleteButtonStyle}"
                            Click="BtnDelete_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ================= DATA GRID ================= -->
        <Border Grid.Row="1"
                Margin="20"
                Padding="10"
                CornerRadius="16"
                BorderBrush="#DDDDDD"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect BlurRadius="10"
                                  ShadowDepth="2"
                                  Opacity="0.25"/>
            </Border.Effect>

            <DataGrid x:Name="dataGrid"
                      Style="{StaticResource ModernDataGrid}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CellStyle="{StaticResource CenterCellStyle}"
                      SelectionChanged="dataGrid_SelectionChanged">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="80" IsReadOnly="True" ElementStyle="{StaticResource CenterCellText}"/>
                    <DataGridTextColumn Header="Part Number" Binding="{Binding Para_No}" Width="*" ElementStyle="{StaticResource CenterCellText}"/>
                    <DataGridTextColumn Header="Part Name" Binding="{Binding Para_Name}" Width="*" ElementStyle="{StaticResource CenterCellText}"/>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID_Value}" Width="*" ElementStyle="{StaticResource CenterCellText}"/>
                    <DataGridTextColumn Header="BOT" Binding="{Binding BOT_Value}" Width="*" ElementStyle="{StaticResource CenterCellText}"/>

                    <DataGridTemplateColumn Header="Status" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                    MouseLeftButtonDown="StatusEllipse_Click"
                    Cursor="Hand"
                    Padding="8,4">
                                    <Ellipse Width="18"
                         Height="18"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <!-- 🔴 Default -->
                                                <Setter Property="Fill" Value="#EF4444"/>

                                                <Style.Triggers>
                                                    <!-- 🟢 ACTIVE (BOOLEAN) -->
                                                    <DataTrigger Binding="{Binding [IsActive]}" Value="True">
                                                        <Setter Property="Fill" Value="#22C55E"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>



                </DataGrid.Columns>

            </DataGrid>
        </Border>

    </Grid>
</UserControl>
