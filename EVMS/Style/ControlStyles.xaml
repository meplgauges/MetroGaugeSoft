<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- POWER BUTTON STYLE -->
<!-- Power Toggle Button (red when OFF, green when ON) -->
<Style x:Key="PowerButtonStyle" TargetType="ToggleButton">
    <Setter Property="Width" Value="70"/>
    <Setter Property="Height" Value="70"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="ToggleButton">
                <Grid>

                    <!-- Outer metal ring -->
                    <Ellipse Stroke="#222" StrokeThickness="4">
                        <Ellipse.Fill>
                            <RadialGradientBrush GradientOrigin="0.3,0.25">
                                <GradientStop Color="Silver" Offset="0"/>
                                <GradientStop Color="Silver" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Inner glossy circle (Fill replaced by triggers) -->
                    <Ellipse x:Name="InnerCircle" Margin="10" Stroke="#111" StrokeThickness="2">
                        <Ellipse.Fill>
                            <!-- Default = RED (OFF) -->
                            <RadialGradientBrush GradientOrigin="0.33,0.25">
                                <GradientStop Color="#FF3B3B" Offset="0"/>
                                <GradientStop Color="#B71C1C" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!-- Power icon centered and scalable -->
                    <Viewbox Width="50" Height="50" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False">
                        <Canvas Width="100" Height="100">

                            <!-- vertical bar -->
                            <Rectangle Width="12" Height="28" Fill="White" RadiusX="2" RadiusY="2"
                               Canvas.Left="44" Canvas.Top="18"/>

                            <!-- bottom semicircle arc (power ring) -->
                            <Path Stroke="White" StrokeThickness="10" StrokeLineJoin="Round"
                          Data="M 30,62 A 22,22 0 0 1 70,62" Fill="Transparent"/>
                        </Canvas>
                    </Viewbox>

                </Grid>

                <!-- change inner fill when checked -->
                <ControlTemplate.Triggers>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter TargetName="InnerCircle" Property="Fill">
                            <Setter.Value>
                                <RadialGradientBrush GradientOrigin="0.33,0.25">
                                    <GradientStop Color="#66DD77" Offset="0"/>
                                    <GradientStop Color="#1B5E20" Offset="1"/>
                                </RadialGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>

                    <Trigger Property="IsChecked" Value="False">
                        <Setter TargetName="InnerCircle" Property="Fill">
                            <Setter.Value>
                                <RadialGradientBrush GradientOrigin="0.33,0.25">
                                    <GradientStop Color="#FF3B3B" Offset="0"/>
                                    <GradientStop Color="#B71C1C" Offset="1"/>
                                </RadialGradientBrush>
                            </Setter.Value>
                        </Setter>
                    </Trigger>

                    <!-- small pressed scale effect -->
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

<Style x:Key="ModernSwitchToggleStyle" TargetType="ToggleButton">
        <Setter Property="Width" Value="80"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <!-- Switch Track -->
                        <Border x:Name="SwitchTrack"
                        Background="#2196F3"
                        CornerRadius="18"
                        Height="36"
                        Width="80"/>
                        <!-- Switch Thumb -->
                        <Ellipse x:Name="SwitchThumb"
                         Width="30"
                         Height="30"
                         Fill="#F2F5F6"
                         Margin="3"
                         HorizontalAlignment="Left">
                            <Ellipse.RenderTransform>
                                <TranslateTransform/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CheckStates">
                                <VisualState x:Name="Unchecked">
                                    <Storyboard>
                                        <DoubleAnimation
                                    Storyboard.TargetName="SwitchThumb"
                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                    To="0" Duration="0:0:0.1"/>
                                        <ColorAnimation
                                    Storyboard.TargetName="SwitchTrack"
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#2196F3" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Checked">
                                    <Storyboard>
                                        <DoubleAnimation
                                    Storyboard.TargetName="SwitchThumb"
                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                    To="44" Duration="0:0:0.1"/>
                                        <ColorAnimation
                                    Storyboard.TargetName="SwitchTrack"
                                    Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                    To="#4CAF50" Duration="0:0:0.1"/>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



<!-- Modern Glossy CheckBox -->
<Style x:Key="ModernCheckBox" TargetType="CheckBox">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Margin" Value="5"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="CheckBox">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Custom Box -->
                    <Border x:Name="CheckBoxBorder"
                        Width="20" Height="20"
                        CornerRadius="4"
                        BorderThickness="1.5"
                        BorderBrush="#81D4FA"
                        Background="#3E3E4E"
                        Margin="0,0,8,0">
                        <Path x:Name="CheckMark" 
                          Data="M 0 4 L 4 8 L 12 0"
                          Stroke="White"
                          StrokeThickness="2"
                          StrokeEndLineCap="Round"
                          StrokeStartLineCap="Round"
                          Visibility="Collapsed"/>
                    </Border>

                    <!-- Label -->
                    <ContentPresenter VerticalAlignment="Center" />
                </StackPanel>

                <ControlTemplate.Triggers>
                    <!-- Hover -->
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="#505070"/>
                    </Trigger>

                    <!-- Checked -->
                    <Trigger Property="IsChecked" Value="True">
                        <Setter TargetName="CheckBoxBorder" Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#4FC3F7" Offset="0"/>
                                    <GradientStop Color="#2196F3" Offset="0.7"/>
                                    <GradientStop Color="#1565C0" Offset="1"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>
<!-- Glossy Blue Button -->
<Style x:Key="GlossyBlueButton" TargetType="Button">
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="FontSize" Value="10"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Padding" Value="10,5"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Button">
                <Grid>
                    <Border x:Name="border"
                            CornerRadius="12" 
                            BorderThickness="1.5"
                            SnapsToDevicePixels="True"
                            >
                        <Border.Background>
                            <!-- Gradient Background -->
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#4FC3F7" Offset="0"/>
                                <GradientStop Color="#2196F3" Offset="0.5"/>
                                <GradientStop Color="#1565C0" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#81D4FA" Offset="0"/>
                                <GradientStop Color="#0D47A1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                    </Border>

                    <!-- Glossy shine effect -->
                    <Border CornerRadius="12" Margin="2" IsHitTestVisible="False">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#80FFFFFF" Offset="0"/>
                                <GradientStop Color="#40FFFFFF" Offset="0.3"/>
                                <GradientStop Color="#00FFFFFF" Offset="0.6"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <!-- Button Content -->
                    <ContentPresenter HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                </Grid>

                <!-- Mouse Over / Pressed Effects -->
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>


    <Style x:Key="StatusButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#F44336"/>
        <!-- Default red -->
        <Setter Property="Content" Value="FAIL"/>
        <!-- Default label -->
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="border"
                            CornerRadius="10" 
                            Background="{TemplateBinding Background}"
                            BorderThickness="1"
                            BorderBrush="Gray" />
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!-- Change to Green with "OK" text if bound value is 1 -->
            <DataTrigger Binding="{Binding StatusValue}" Value="1">
                <Setter Property="Background" Value="#4CAF50"/>
                <Setter Property="Content" Value="OK"/>
            </DataTrigger>

            <!-- Optional: you can add more conditions if needed -->
        </Style.Triggers>
    </Style>

    <!-- Modern ComboBox Style -->
    <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Width" Value="180"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="MinWidth" Value="50"/>

        <Setter Property="Margin" Value="20,6"/>
        <Setter Property="Foreground" Value="#222"/>
        <Setter Property="Background" Value="AliceBlue"/>
        <Setter Property="BorderBrush" Value="#80A0B9C9"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="Border"
                   Background="{TemplateBinding Background}"
                   BorderBrush="{TemplateBinding BorderBrush}"
                   BorderThickness="{TemplateBinding BorderThickness}"
                   CornerRadius="6"
                   SnapsToDevicePixels="True">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                 Focusable="false"
                                 IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                 ClickMode="Press"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 HorizontalAlignment="Right"
                                 Width="30"
                                 Padding="0">
                                    <Path VerticalAlignment="Center" HorizontalAlignment="Center" 
                             Data="M 0 0 L 8 0 L 4 4 Z" Fill="#222"/>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite"
                            IsHitTestVisible="False"
                            Content="{TemplateBinding SelectionBoxItem}"
                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                            Margin="6,0,30,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />

                            </Grid>
                        </Border>
                        <Popup x:Name="Popup"
                  Placement="Bottom"
                  IsOpen="{TemplateBinding IsDropDownOpen}"
                  AllowsTransparency="True"
                  Focusable="False"
                  PopupAnimation="Slide">
                            <Grid x:Name="DropDown"
                     SnapsToDevicePixels="True"
                     MinWidth="{TemplateBinding ActualWidth}"
                     MaxHeight="200"
                     Background="White">
                                <ScrollViewer Margin="4,6,4,6"
                                 SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True"
                                   KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Grid>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Background" Value="#EEE"/>
                            <Setter Property="Foreground" Value="#888"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="Black"/>
                        </Trigger>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="Black"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CustomDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#2D3748"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8 4"/>
        <Setter Property="Height" Value="38"/>
    </Style>

    <!-- Drop Shadow Effect -->
    <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="8" ShadowDepth="2" Direction="270" Color="#33000000"/>
    <!-- Modern Filled TextBox -->
    <Style x:Key="ModernFilledTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="#F0F3FA"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#80A0B9C9"/>
        <Setter Property="Foreground" Value="#222"/>
        <Setter Property="Padding" Value="10,6"/>
        <Setter Property="Margin" Value="20,6"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Width" Value="370"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                 BorderThickness="{TemplateBinding BorderThickness}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 CornerRadius="6"
                 SnapsToDevicePixels="True">
                        <Border.Effect>
                            <DropShadowEffect Color="#804A90E2" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>
                        <ScrollViewer x:Name="PART_ContentHost"
                           VerticalAlignment="Center"
                           Margin="0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    
    <!-- Optional: DropShadow Effect for Left Panel -->
    <DropShadowEffect x:Key="DropShadowEffectLight" BlurRadius="8" ShadowDepth="1" Direction="270" Color="#24000000"/>

</ResourceDictionary>




