<UserControl x:Class="EVMS.Repeatbilty_Page"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F3F4F6"
             MinWidth="1000" MinHeight="700">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/EVMS;component/Style/ReportPageDesign.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid Margin="20">
        <!-- Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E293B" CornerRadius="12" Padding="15" Margin="0,0,0,12">
            <TextBlock Text="Repeatability Report"
                       Foreground="White"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Filters -->
        <!-- Filters -->
        <Border Grid.Row="1"
        Background="{StaticResource PageBackgroundBrush}"
        CornerRadius="12"
        Padding="20"
        BorderBrush="#CBD5E1"
        BorderThickness="1"
        Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />

                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Part No -->
                <StackPanel Orientation="Vertical"
                    Grid.Column="1"
                    HorizontalAlignment="Center">
                    <TextBlock Text="Part Number"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,6"
                       HorizontalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding ActiveParts}"
                      SelectedItem="{Binding SelectedPartNo, Mode=TwoWay}"
                      Style="{DynamicResource ModernComboBoxStyle}"

                      Width="220"
                      FontSize="14"
                      Padding="4" />
                </StackPanel>


                <!-- Parameter -->
                <StackPanel Orientation="Vertical"
                    Grid.Column="2"
                    HorizontalAlignment="Center">
                    <TextBlock Text="Select Parameter"
                       FontWeight="Bold"
                       FontSize="14"
                       Margin="0,0,0,6"
                       HorizontalAlignment="Center"/>
                    <ComboBox ItemsSource="{Binding ParametersOptions}"
                      SelectedItem="{Binding SelectedParameter, Mode=TwoWay}"
                      Style="{DynamicResource ModernComboBoxStyle}"
                      Width="220"
                      FontSize="14"
                      Padding="4"/>
                </StackPanel>

                <StackPanel Orientation="Vertical"
                         Grid.Column="3"
                         HorizontalAlignment="Center">
                    <TextBlock Text="Select Count"
                        FontWeight="Bold"
                        FontSize="14"
                        Margin="0,0,0,6"
                        HorizontalAlignment="Center"/>
                    <ComboBox
                        x:Name="RecordsCountCombo"
                        Margin="5"
                         Style="{DynamicResource ModernComboBoxStyle}"
                        ItemsSource="{Binding RecordsCountOptions}"
                        SelectedItem="{Binding SelectedRecordsCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </Grid>
        </Border>


        <!-- Main Layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.8*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>

            <!-- Table Section -->
            <Border Grid.Column="0"
                    Background="White"
                    CornerRadius="12"
                    Padding="20"
                    BorderBrush="#CBD5E1"
                    BorderThickness="1"
                    Margin="0,0,12,0">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>



                    <!-- DataGrid -->
                    <DataGrid x:Name="RepeatabilityGrid"
                              Grid.Row="1"
                              ItemsSource="{Binding RepeatabilityItems}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              FontSize="16"
                              RowHeight="44"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              BorderThickness="1"
                              BorderBrush="#E2E8F0"
                              AlternatingRowBackground="#F8FAFC"
                              GridLinesVisibility="Horizontal"
                              SelectionMode="Single"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch">

                        <!-- Center all text and align headers -->
                        <DataGrid.Resources>
                            <!-- Center cell text -->
                            <Style TargetType="DataGridCell">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="FontSize" Value="16"/>
                            </Style>

                            <!-- Center and align headers -->
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Height" Value="44"/>
                                <Setter Property="Padding" Value="8,0"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="BorderBrush" Value="#E2E8F0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            </Style>
                        </DataGrid.Resources>

                        <!-- Columns -->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Serial No" Binding="{Binding SerialNo}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Lot No" Binding="{Binding LotNo}" Width="160">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Operator" Binding="{Binding Operator}" Width="160">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Date Time" Binding="{Binding DateTime}" Width="400">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Reading" Binding="{Binding Reading, StringFormat=F3}" Width="360">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>


                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Summary Section -->
            <!-- Summary Section -->
            <Border Grid.Column="1"
        Background="{StaticResource PageBackgroundBrush}"
        CornerRadius="16"
        Padding="30"
        BorderBrush="#E2E8F0"
        BorderThickness="1"
        Margin="12,0,0,0"
        Effect="{StaticResource CardShadow}">

                <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <TextBlock Text="Reading Analysis"
                   Grid.Row="0"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="Black" 
                   Margin="0,0,0,24"
                   HorizontalAlignment="Center"/>

                    <!-- Metrics Grid -->
                    <Grid Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- USL -->
                        <Border Grid.Row="0" Background="#D9EAF8 " CornerRadius="10" Margin="0,6">
                            <DockPanel LastChildFill="True" Margin="12,6">
                                <TextBlock Text="USL"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#353535"
                               Width="120"
                               VerticalAlignment="Center"/>
                                <Border Background="White"
                            BorderBrush="#1414DE"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="6,3"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Summary.USL, StringFormat=F3}"
                                   FontSize="18"
                                   Foreground="#1E293B"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- LSL -->
                        <Border Grid.Row="1" Background="#D9EAF8 " CornerRadius="10" Margin="0,6">
                            <DockPanel LastChildFill="True" Margin="12,6">
                                <TextBlock Text="LSL"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#353535"
                               Width="120"
                               VerticalAlignment="Center"/>
                                <Border Background="White"
                            BorderBrush="#1414DE"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="6,3"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Summary.LSL, StringFormat=F3}"
                                   FontSize="18"
                                   Foreground="#353535"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- Min -->
                        <Border Grid.Row="2" Background="#BCF5D8" CornerRadius="10" Margin="0,6">
                            <DockPanel LastChildFill="True" Margin="12,6">
                                <TextBlock Text="Min"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Width="120"
                               VerticalAlignment="Center"/>
                                <Border Background="White"
                            BorderBrush="#1414DE"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="6,3"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Summary.Min, StringFormat=F3}"
                                   FontSize="18"
                                   Foreground="#353535"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- Max -->
                        <Border Grid.Row="3" Background="#FFD5D5" CornerRadius="10" Margin="0,6">
                            <DockPanel LastChildFill="True" Margin="12,6">
                                <TextBlock Text="Max"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Width="120"
                               VerticalAlignment="Center"/>
                                <Border Background="White"
                            BorderBrush="#1414DE"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="6,3"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Summary.Max, StringFormat=F3}"
                                   FontSize="18"
                                   Foreground="#353535"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </Border>

                        <!-- Variation -->
                        <Border Grid.Row="4" Background="#FFEFB5" CornerRadius="10" Margin="0,6">
                            <DockPanel LastChildFill="True" Margin="12,6">
                                <TextBlock Text="Variation"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#1E293B"
                               Width="120"
                               VerticalAlignment="Center"/>
                                <Border Background="White"
                            BorderBrush="#1414DE"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="6,3"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Summary.Variation, StringFormat=F3}"
                                   FontSize="18"
                                   Foreground="#1E293B"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                                </Border>
                            </DockPanel>
                        </Border>

                    </Grid>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
