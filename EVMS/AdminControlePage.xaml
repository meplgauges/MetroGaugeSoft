<UserControl x:Class="EVMS.AdminControlePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EVMS"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <!-- Two rows: one for first border, one for second -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ============================
         BORDER 1 - ICON + INPUTS + BUTTONS
         ============================ -->
            <Border Grid.Row="0"
            Margin="18,18,8,18"
            BorderBrush="#D9D9D9"
            BorderThickness="1"
            CornerRadius="14"
            Background="{StaticResource PageBackgroundBrush}">

                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Icon -->
                        <RowDefinition Height="Auto"/>
                        <!-- Inputs -->
                        <RowDefinition Height="Auto"/>
                        <!-- Buttons -->
                    </Grid.RowDefinitions>

                    <!-- ICON -->
                    <TextBlock Text="&#xE713;"
                       FontFamily="Segoe MDL2 Assets"
                       HorizontalAlignment="Center"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#2C3E50"
                       Margin="0,15,0,10"
                       VerticalAlignment="Center" />

                    <!-- INPUT FIELDS -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

                        <TextBlock Text="Select User:" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox x:Name="cmbPartNo"
                          Style="{StaticResource ModernComboBoxStyle}"
                          HorizontalAlignment="Stretch">
                            <ComboBoxItem Content="Admin" />
                            <ComboBoxItem Content="Operator" />
                        </ComboBox>

                        <TextBlock Text="ID:" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="txtID" Style="{StaticResource ModernFilledTextBox}"/>

                        <TextBlock Text="Name:" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="txtName" Style="{StaticResource ModernFilledTextBox}"/>

                        <TextBlock Text="Password:" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox x:Name="txtRTolMinus" Style="{StaticResource ModernFilledTextBox}"/>
                    </StackPanel>

                    <!-- BUTTONS -->
                    <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top">

                        <Button x:Name="btnAdd"
                        Content="Add"
                        Width="90"
                        Height="36"
                        Background="#2ECC71"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Margin="0,22,12,0"
                        Style="{StaticResource ModernButtonStyle}"/>

                        <Button x:Name="btnUpdate"
                        Content="Update"
                        Width="90"
                        Height="36"
                        Background="#F39C12"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Margin="0,22,12,0"
                        Style="{StaticResource ModernButtonStyle}"/>

                        <Button x:Name="btnDelete"
                        Content="Delete"
                        Width="90"
                        Height="36"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Margin="0,22,12,0"
                        Style="{StaticResource ModernButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ============================
         BORDER 2 - CLEAN EMPTY SECTION
         ============================ -->
            <Border Grid.Row="1"
        Margin="18,0,8,18"
        BorderBrush="#D9D9D9"
        BorderThickness="1"
        CornerRadius="14"
        Background="{StaticResource PageBackgroundBrush}">

                <Grid Margin="18">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Company Label -->
                        <RowDefinition Height="Auto"/>
                        <!-- Company TextBox -->
                        <RowDefinition Height="Auto"/>
                        <!-- Image Picker -->
                        <RowDefinition Height="*"/>
                        <!-- Image Preview -->
                        <RowDefinition Height="Auto"/>
                        <!-- Update Button -->
                    </Grid.RowDefinitions>

                    <!-- Company Name -->
                    <TextBlock Text="Company Name" 
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtCompanyName"
                 Grid.Row="1"
                 Style="{StaticResource ModernFilledTextBox}"
                 Margin="0,5,0,0"/>

                    <!-- Image Picker -->
                    <StackPanel Grid.Row="2"
                    Margin="0,15,0,0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                        <TextBlock Text="Company Logo:"
                       VerticalAlignment="Center"
                       Style="{StaticResource FormLabelStyle}"/>
                        <Button x:Name="btnPickImage"
                    Content="Browse Image"
                    Width="130"
                    Margin="15,0,0,0"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="btnPickImage_Click"/>
                    </StackPanel>

                    <!-- Image Preview -->
                    <Border Grid.Row="3"
                Margin="0,20,0,20"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="8"
                HorizontalAlignment="Center"
                Width="180"
                Height="180">
                        <Image x:Name="imgPreview"
                   Stretch="UniformToFill"/>
                    </Border>

                    <!-- Update Button Centered -->
                    <Button x:Name="btnCompanyUpdate"
                Grid.Row="4"
                Content="Update Company"
                Width="160"
                Height="40"
                HorizontalAlignment="Center"
                Background="#3498DB"
                Foreground="White"
                FontWeight="SemiBold"
                Margin="0,10,0,10"
                Style="{StaticResource ModernButtonStyle}"
                Click="btnCompanyUpdate_Click"/>
                </Grid>
            </Border>



        </Grid>

        <!-- RIGHT PANEL -->
        <Border Grid.Column="1" Margin="12,20,20,20"
            BorderBrush="#D9D9D9"
            BorderThickness="0.90"
            CornerRadius="14" Background="{StaticResource PageBackgroundBrush}">
            <!-- Background image -->

            <!--  SelectionChanged="dataGrid_SelectionChanged"
LoadingRow="dataGrid_LoadingRow"-->
            <DataGrid x:Name="dataGrid"
                      AutoGenerateColumns="False"
                      SelectionChanged="dataGrid_SelectionChanged"
                      IsReadOnly="True"
                      Margin="10"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      AlternatingRowBackground="White"
                      GridLinesVisibility="None"
                      RowHeaderWidth="0"
                      FontSize="14"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Padding="4"
                      RowHeight="38"
                      EnableRowVirtualization="True"
                      ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeaderStyle}"
                      RowStyle="{StaticResource CustomDataGridRowStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sr No" Binding="{Binding SrNo}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="User Type" Binding="{Binding UserType}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="User ID" Binding="{Binding UserID}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding UserName}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*"
                             ElementStyle="{StaticResource CenterCellStyle}"
                             EditingElementStyle="{StaticResource CenterCellStyle}" />
                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</UserControl>