<UserControl x:Class="EVMS.AdminControlePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EVMS"
             mc:Ignorable="d" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/Design.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <!-- LEFT PANEL -->
        <Border Grid.Column="0" Margin="18,18,8,18"
            BorderBrush="#D9D9D9"
            BorderThickness="1"
            CornerRadius="14" Background="{StaticResource PageBackgroundBrush}">
           
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="&#xE713;"
                           FontFamily="Segoe MDL2 Assets"
                               HorizontalAlignment="Center"
                               FontSize="22"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               Margin="0,15,0,10"
                               VerticalAlignment="Center" />

                <StackPanel Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                    <!-- ComboBox added above the Parameter label -->
                    <TextBlock Text="Select User:" Style="{StaticResource FormLabelStyle}"/>
                    <ComboBox x:Name="cmbPartNo"
                          Style="{StaticResource ModernComboBoxStyle}"
                          HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="Admin" />
                        <ComboBoxItem Content="Operator" />
                    </ComboBox>

                    <!-- Using the reusable label style -->
                    <TextBlock Text="ID:" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtID" Style="{StaticResource ModernFilledTextBox}"/>

                    <TextBlock Text="Name:" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtName" Style="{StaticResource ModernFilledTextBox}"/>
                    <TextBlock Text="Password:" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtRTolMinus" Style="{StaticResource ModernFilledTextBox}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top"  >
                    <Button x:Name="btnAdd" Content="Add" Width="90" Height="36" Background="#2ECC71" Foreground="White" FontWeight="SemiBold" Margin="0,22,12,0" Style="{StaticResource ModernButtonStyle}"/>
                    <Button x:Name="btnUpdate" Content="Update" Width="90" Height="36" Background="#F39C12" Foreground="White" FontWeight="SemiBold" Margin="0,22,12,0" Style="{StaticResource ModernButtonStyle}"/>
                    <Button x:Name="btnDelete" Content="Delete" Width="90" Height="36" Background="#E74C3C" Foreground="White" FontWeight="SemiBold" Margin="0,22,12,0" Style="{StaticResource ModernButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- RIGHT PANEL -->
        <Border Grid.Column="1" Margin="12,20,20,20"
            BorderBrush="#D9D9D9"
            BorderThickness="0.90"
            CornerRadius="14" Background="{StaticResource PageBackgroundBrush}">
            <!-- Background image -->
           
            <!--  SelectionChanged="dataGrid_SelectionChanged"
LoadingRow="dataGrid_LoadingRow"-->
            <DataGrid x:Name="dataGrid"
                      AutoGenerateColumns="False"
                      SelectionChanged="dataGrid_SelectionChanged"
                      IsReadOnly="True"
                      Margin="10"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      AlternatingRowBackground="White"
                      GridLinesVisibility="None"
                      RowHeaderWidth="0"
                      FontSize="14"
                      Background="Transparent"
                      BorderBrush="Transparent"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Padding="4"
                      RowHeight="38"
                      EnableRowVirtualization="True"
                      ColumnHeaderStyle="{StaticResource CustomDataGridColumnHeaderStyle}"
                      RowStyle="{StaticResource CustomDataGridRowStyle}">   
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sr No" Binding="{Binding SrNo}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="User Type" Binding="{Binding UserType}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="User ID" Binding="{Binding UserID}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding UserName}" Width="*"
                            ElementStyle="{StaticResource CenterCellStyle}"
                            EditingElementStyle="{StaticResource CenterCellStyle}" />
                    <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*"
                             ElementStyle="{StaticResource CenterCellStyle}"
                             EditingElementStyle="{StaticResource CenterCellStyle}" />  
                </DataGrid.Columns>
            </DataGrid>

        </Border>
    </Grid>
</UserControl>