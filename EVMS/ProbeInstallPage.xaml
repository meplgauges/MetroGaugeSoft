<UserControl x:Class="EVMS.ProbeInstallPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- (ALL YOUR EXISTING RESOURCES — UNCHANGED) -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2196F3"/>
        <SolidColorBrush x:Key="PrimaryDark" Color="#1976D2"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF5722"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="CardColor" Color="White"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#212121"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#757575"/>

        <DropShadowEffect x:Key="CardShadow" Color="Gray" Direction="270" ShadowDepth="3" BlurRadius="12" Opacity="0.18"/>
        <DropShadowEffect x:Key="HeaderShadow" Color="Gray" Direction="270" ShadowDepth="1" BlurRadius="4" Opacity="0.1"/>

        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Margin" Value="12,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Effect="{StaticResource CardShadow}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
        </Style>

        <Style x:Key="CenteredColumnStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="CenterHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

    </UserControl.Resources>

    <!-- MAIN WRAPPER -->
    <Border Background="{StaticResource SurfaceColor}"
            CornerRadius="20"
            Padding="32"
            Margin="16"
            Effect="{StaticResource CardShadow}"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">

        <Grid>

            <!-- ONLY THIS SECTION CHANGED -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="Auto"/>
                <!-- COM Port Row -->
                <RowDefinition Height="*"/>
                <!-- DataGrid (FULL SPACE) -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom Buttons -->
            </Grid.RowDefinitions>
            <!-- END OF CHANGES -->

            <!-- HEADER 
            <StackPanel Grid.Row="0" Margin="0,0,0,32">
                <TextBlock Text="🔧 Probe Assign " 
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}"/>
                <TextBlock Text="Configure COM ports, monitor live probe values and manage parameters"
                           FontSize="16"
                           Foreground="{StaticResource TextSecondary}"
                           Margin="0,8,0,0"/>
            </StackPanel>-->

            <!-- TOP CONTROL BAR -->
            <Border Grid.Row="1"
                    Background="{StaticResource CardColor}"
                    CornerRadius="16"
                    Padding="28"
                    Margin="0,0,0,32"
                    Effect="{StaticResource CardShadow}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📡 Select COM Port:" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,20,0"/>
                        <ComboBox x:Name="ComboPorts" Width="220" Height="48"
                                  Margin="0,0,20,0" FontSize="16"
                                  VerticalContentAlignment="Center" FontWeight="Medium"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="🔄 Refresh" Height="48" Width="100"
                                Style="{StaticResource ModernButtonStyle}"
                                Click="BtnRefreshPorts_Click"/>
                        <Button Content="🔌 Connect" Height="48" Width="100"
                                Style="{StaticResource ModernButtonStyle}"
                                Click="BtnConnect_Click"/>
                        <Button Content="🔌 Disconnect" Height="48" Width="100"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="BtnDisconnect_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- DATA GRID AREA (NO CHANGES EXCEPT LAYOUT FIX ABOVE) -->
            <Border Grid.Row="2"
                    Background="{StaticResource CardColor}"
                    CornerRadius="16"
                    Margin="0,0,0,32"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Effect="{StaticResource CardShadow}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{StaticResource PrimaryColor}"
                            CornerRadius="16,16,0,0"
                            Padding="28,20">
                        <TextBlock Text="📊 Live Probe Parameters"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                    </Border>

                    <DataGrid Grid.Row="1"
                              x:Name="ParametersGrid"
                              ItemsSource="{Binding Parameters}"
                              AutoGenerateColumns="False"
                              CanUserResizeColumns="False"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="Transparent"
                              BorderThickness="0"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.CanContentScroll="True"
                              RowHeight="60"
                              FontFamily="Segoe UI"
                              Margin="0">

                        <DataGrid.ColumnHeaderStyle>
                            <StaticResource ResourceKey="CenterHeaderStyle"/>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Parameter" Binding="{Binding Name}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Box ID" Binding="{Binding BoxId}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Channels" Binding="{Binding ChannelsAsString}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontSize" Value="18"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Live Value" Binding="{Binding LiveValue}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontSize" Value="20"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                        </DataGrid.Columns>

                    </DataGrid>
                </Grid>
            </Border>

            <!-- BOTTOM ACTION BAR -->
            <Border Grid.Row="3"
                    Background="{StaticResource CardColor}"
                    CornerRadius="16"
                    Padding="28"
                    Margin="0,0,0,20"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Content="💾 Save Configuration" Height="52" MinWidth="200"
                                Style="{StaticResource ModernButtonStyle}" Click="BtnSave_Click"/>
                        <Button Content="▶️ Start Live Data" Height="52" MinWidth="180"
                                Style="{StaticResource ModernButtonStyle}" Click="BtnStart_Click"/>
                        <Button Content="⏹️ Stop Live Data" Height="52" MinWidth="180"
                                Style="{StaticResource AccentButtonStyle}" Click="BtnStop_Click"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Status:" FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimary}" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TxtStatus" FontSize="16" FontWeight="SemiBold"
                                   Foreground="{StaticResource PrimaryColor}"/>
                    </StackPanel>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
