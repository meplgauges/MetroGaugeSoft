<UserControl x:Class="EVMS.Calculation_Modification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/ControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

       
        <!-- RIGHT PANEL -->
        <Border Background="{StaticResource PageBackgroundBrush}" 
                Grid.Column="1" 
                Margin="5" 
                BorderBrush="Gray" 
                BorderThickness="2" 
                CornerRadius="10" 
                Padding="20">

            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Header Row -->
                    <RowDefinition Height="*"/>
                    <!-- Scrollable Content -->
                </Grid.RowDefinitions>

                <!-- Title at Top -->
                <TextBlock Grid.Row="0"
                           Text="Calculation Configuration"
                           Foreground="Black"
                           FontSize="25"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Static Header Row -->
                <Border Grid.Row="1"
                    Background="Black"
                    CornerRadius="10"
                    Margin="0,0,0,10"
                    Padding="15,10,15,10"
                    BorderBrush="Gray"
                    BorderThickness="1">    

                    <Grid x:Name="HeaderGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <!-- Parameter -->
                            <ColumnDefinition Width="3*"/>
                            <!-- Sign Change -->
                            <ColumnDefinition Width="2.6*"/>
                            <!-- Compensation -->
                            <ColumnDefinition Width="1.3*"/>
                            <!-- Action -->
                        </Grid.ColumnDefinitions>

                        <!-- Header Column 1: Parameter -->
                        <TextBlock Grid.Column="0"
                   Text="PARAMETER"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0"/>

                        <!-- Header Column 2: Sign Change -->
                        <TextBlock Grid.Column="1"
                   Text="SIGN CHANGE"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0"/>

                        <!-- Header Column 3: Compensation -->
                        <TextBlock Grid.Column="2"
                   Text="COMPENSATION"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0"/>

                        <!-- Header Column 4: Action -->
                        <TextBlock Grid.Column="3"
                   Text="ACTION"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0"/>
                    </Grid>
                </Border>


                <!-- ScrollViewer with Dynamic items -->
                <ScrollViewer Grid.Row="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="ToggleGrid1" 
                                Margin="5,0,5,10" 
                                VerticalAlignment="Top"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
